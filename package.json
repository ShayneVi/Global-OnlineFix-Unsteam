{
  "name": "global-onlinefix-installer",
  "version": "1.0.0",
  "description": "Automated installer for GlobalFix Steam game modifications",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": ["electron", "steam", "game", "installer"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "7zip-bin": "^5.2.0",
    "node-7z": "^3.0.0",
    "ini": "^4.1.1"
  },
  "build": {
    "appId": "com.globalfix.installer",
    "productName": "GlobalFix Installer",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  }
